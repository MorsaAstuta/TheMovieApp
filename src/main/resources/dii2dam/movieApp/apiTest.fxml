                     </columnResizePolicy>
                  </TableView>
                  <ImageView fx:id="idPoster" fitHeight="384.0" fitWidth="256.0" pickOnBounds="true" preserveRatio="true" />
               </children>
            </FlowPane>
         </center>
      </BorderPane>
   </center>
